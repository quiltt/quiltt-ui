{
  "root": true,
  "globals": {
    "React": true,
    "JSX": true,
    "expect": true,
    "jsdom": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    },
    "project": "tsconfig.json"
  },
  "extends": ["quiltt/typescript"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "tabWidth": 2,
        "bracketSpacing": true,
        "bracketSameLine": false,
        "arrowParens": "always",
        "trailingComma": "es5",
        "printWidth": 100
      }
    ]
    // "simple-import-sort/imports": [
    //   "error",
    //   {
    //     "groups": [
    //       ["^react", "^react-dom"],
    //       ["^@?\\w"],
    //       ["^(@|@company|@ui|components|utils|config|vendored-lib)(/.*|$)"],
    //       ["^\\u0000"],
    //       ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
    //       ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
    //       ["^.+\\.s?css$"]
    //     ]
    //   }
    // ]
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.test.tsx"],
      "rules": {
        "import/no-extraneous-dependencies": ["off"]
      }
    }
  ]
}
